{% comment %}
  Product Carousel - Fade Up Animation
  - Prefix updated to RM
  - Square Image Boxes (1:1)
  - Top Left Navigation Arrows
  - Mobile Responsive
{% endcomment %}

<div class="RM-carousel-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    
    <div class="RM-header">
      <div class="RM-title-wrapper">
        {% if section.settings.title != blank %}
          <h2 class="RM-title" style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
        {% endif %}
      </div>
      
      <div class="RM-nav-arrows">
        <button class="RM-arrow RM-prev" aria-label="Previous Products">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
        </button>
        <button class="RM-arrow RM-next" aria-label="Next Products">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </button>
      </div>
    </div>

    <div class="RM-carousel-wrapper">
      <div class="RM-carousel-track" id="track-{{ section.id }}">
        
        {%- assign collection = collections[section.settings.collection] -%}
        {%- assign product_limit = section.settings.product_limit -%}

        {% if collection != blank %}
          {% for product in collection.products limit: product_limit %}
            <div class="RM-product-card fade-up-item">
              <a href="{{ product.url }}" class="RM-product-link">
                <div class="RM-image-wrapper">
                  {% if product.featured_image != blank %}
                    <img 
                      src="{{ product.featured_image | image_url: width: 600, height: 600, crop: 'center' }}" 
                      alt="{{ product.title | escape }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                    {% if product.images[1] != blank and section.settings.show_secondary_hover %}
                      <img 
                        class="RM-hover-image"
                        src="{{ product.images[1] | image_url: width: 600, height: 600, crop: 'center' }}" 
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% endif %}
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                  
                 {% if product.compare_at_price > product.price %}
                    <span class="RM-badge sale">
                      Save {{ product.compare_at_price | minus: product.price | money }}
                    </span>
                  {% endif %}
                </div>
                
                <div class="RM-info">
                  <h3 class="RM-product-title" style="color: {{ section.settings.text_color }}">{{ product.title }}</h3>
                  <div class="RM-price" style="color: {{ section.settings.text_color }}">
                    {% if product.compare_at_price > product.price %}
                      <span class="RM-compare-price">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    <span class="RM-regular-price">{{ product.price | money }}</span>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        {% else %}
          {% for i in (1..6) %}
            <div class="RM-product-card fade-up-item">
              <div class="RM-image-wrapper">
                {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="RM-info">
  <h3 class="RM-product-title" style="color: {{ section.settings.text_color }}">{{ product.title }}</h3>
  
  <div class="RM-price-row">
    
    <div class="RM-price" style="color: {{ section.settings.text_color }}">
      {% if product.compare_at_price > product.price %}
        <span class="RM-compare-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
      <span class="RM-regular-price">{{ product.price | money }}</span>
    </div>

    <form method="post" action="/cart/add" class="RM-atc-form" data-product-id="{{ product.selected_or_first_available_variant.id }}">
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
      <button type="submit" class="RM-atc-btn" aria-label="Add to Cart">
        <span class="svg-wrapper">
              {{ 'rm-cart-icon.svg' | inline_asset_content }}
            </span>
      </button>
    </form>

  </div>
</div>
            </div>
          {% endfor %}
        {% endif %}
        
      </div>
    </div>
  </div>
</div>

<style>
  /* --- Section Styles --- */
  .RM-carousel-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }
  
 
  /* --- Header (Top Left Arrows) --- */
  .RM-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
    justify-content: space-between;
  }

  .RM-title {
    margin: 0;
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
  }

  .RM-nav-arrows {
    display: flex;
    gap: 10px;
  }

  .RM-arrow {
    background: transparent;
    border: 1px solid {{ section.settings.text_color }};
    color: {{ section.settings.text_color }};
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .RM-arrow:hover {
    background: {{ section.settings.text_color }};
    color: {{ section.settings.bg_color }};
  }
  
  /* --- Carousel Track --- */
  .RM-carousel-wrapper {
    position: relative;
    width: 100%;
  }

  .RM-carousel-track {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding-bottom: 20px;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  
  .RM-carousel-track::-webkit-scrollbar {
    display: none;
  }

  /* --- Product Card --- */
  .RM-product-card {
    min-width: 280px; 
    max-width: 280px;
    flex-shrink: 0;
    position: relative;
  }

  .RM-product-link {
    text-decoration: none;
    display: block;
  }

  /* --- IMAGE WRAPPER (SQUARE) --- */
  .RM-image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    aspect-ratio: 1 / 1; /* Forces perfectly square box */
    background: #f4f4f4;
    margin-bottom: 15px;
    width: 100%;
  }

  .RM-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures image fills the square without stretching */
    transition: transform 0.5s ease;
  }

  /* Hover Zoom Effect */
  .RM-product-card:hover .RM-image-wrapper img {
    transform: scale(1.05);
  }

  /* Secondary Hover Image */
  .RM-hover-image {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 2;
    transition: opacity 0.4s ease;
  }

  .RM-product-card:hover .RM-hover-image {
    opacity: 1;
  }

  /* Text Styles */
  .RM-product-title {
    font-size: 16px;
    margin: 0 0 5px;
    font-weight: 500;
  }

  .RM-price {
    font-size: 14px;
    opacity: 0.8;
  }

  .RM-compare-price {
    text-decoration: line-through;
    margin-right: 8px;
    color: red;
    font-weight: 600;
  }
   /* Container for Price + Button */
.RM-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between; /* Pushes price left, button right */
  margin-top: 5px;
}

/* The Round Cart Button */
.RM-atc-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: #000; /* Button Background Color */
  color: #fff;            /* Icon Color */
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 0;
}

.RM-atc-btn:hover {
  background-color: #444;
  transform: scale(1.1);
}

/* Success State (Used by JS) */
.RM-atc-btn.added {
  background-color: #28a745; /* Green */
  transform: scale(1.1);
}
  /* Sale Badge */
  .RM-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #000;
    color: #fff;
    padding: 4px 10px;
    font-size: 12px;
    border-radius: 4px;
    z-index: 3;
  }

  /* --- Fade Up Animation --- */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-up-item {
    opacity: 0;
    animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  .fade-up-item:nth-child(1) { animation-delay: 0.1s; }
  .fade-up-item:nth-child(2) { animation-delay: 0.2s; }
  .fade-up-item:nth-child(3) { animation-delay: 0.3s; }
  .fade-up-item:nth-child(4) { animation-delay: 0.4s; }

  /* --- Mobile Responsive --- */
  @media only screen and (max-width: 768px) {
    .RM-product-card {
      min-width: 200px; /* Smaller cards on mobile */
      max-width: 200px;
    }
    
    .RM-header {
      flex-direction: row; 
      justify-content: space-between;
    }
    
    .RM-product-title, .RM-regular-price {
      font-size: 12px;
      color: black;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const track = document.getElementById("track-{{ section.id }}");
    const prevBtn = track.parentElement.parentElement.querySelector(".RM-prev");
    const nextBtn = track.parentElement.parentElement.querySelector(".RM-next");
    
    if (!track || !prevBtn || !nextBtn) return;

    // Scroll amount calculation (approx 1 card width + gap)
    const getScrollAmount = () => {
      const card = track.querySelector('.RM-product-card');
      return card ? card.offsetWidth + 20 : 300;
    };

    nextBtn.addEventListener("click", () => {
      track.scrollBy({ left: getScrollAmount(), behavior: 'smooth' });
    });

    prevBtn.addEventListener("click", () => {
      track.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' });
    });
  });

  document.addEventListener("DOMContentLoaded", function() {
  const forms = document.querySelectorAll('.RM-atc-form');

  forms.forEach(form => {
    form.addEventListener('submit', function(e) {
      e.preventDefault(); // Stop page reload

      const btn = form.querySelector('.RM-atc-btn');
      const originalHtml = btn.innerHTML;
      const formData = new FormData(form);

      // Simple visual feedback: Loading
      btn.style.opacity = '0.7';

      fetch(window.Shopify.routes.root + 'cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => {
        return response.json();
      })
      .then(data => {
        // Success Animation
        btn.classList.add('added');
        // Change icon to checkmark
        btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
        
        // Optional: Update global cart count if your theme supports it
        // document.dispatchEvent(new Event('cart:refresh')); 

        // Reset button after 2 seconds
        setTimeout(() => {
          btn.classList.remove('added');
          btn.innerHTML = originalHtml;
          btn.style.opacity = '1';
        }, 2000);
      })
      .catch((error) => {
        console.error('Error:', error);
        btn.style.opacity = '1';
        alert('Could not add to cart. Please try again.');
      });
    });
  });
});
</script>

{% schema %}
{
  "name": "RM Product Carousel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Trending Now"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 4,
      "max": 12,
      "step": 1,
      "label": "Number of Products",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_secondary_hover",
      "label": "Show Second Image on Hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "RM Product Carousel"
    }
  ]
}
{% endschema %}