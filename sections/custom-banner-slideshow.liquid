{% comment %}
  Custom Banner Slideshow Section
  - Includes Background Image + Floating Product Image
  - Heading, Subtext, and CTA Button
{% endcomment %}

<div class="custom-slideshow-container" id="slideshow-{{ section.id }}">
  <div class="slideshow-wrapper">
    {% for block in section.blocks %}
      <div class="slide-item {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}">
        
        {% if block.settings.bg_image != blank %}
          <div class="slide-background">
            <img src="{{ block.settings.bg_image | image_url: width: 2000 }}" loading="lazy" alt="{{ block.settings.heading | escape }}">
            <div class="slide-overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }}"></div>
          </div>
        {% else %}
          <div class="slide-background placeholder-bg">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}

        <div class="slide-content-wrapper page-width">
          <div class="slide-grid">
            
            <div class="slide-text">
              {% if block.settings.heading != blank %}
                <h2 class="slide-heading" style="color: {{ block.settings.text_color }}">{{ block.settings.heading }}</h2>
              {% endif %}
              
              {% if block.settings.subtext != blank %}
                <p class="slide-subtext" style="color: {{ block.settings.text_color }}">{{ block.settings.subtext }}</p>
              {% endif %}
              
              {% if block.settings.btn_link != blank and block.settings.btn_label != blank %}
                <a href="{{ block.settings.btn_link }}" class="slide-button">{{ block.settings.btn_label }}</a>
              {% endif %}
            </div>

            <div class="slide-product-image">
              {% if block.settings.product_image != blank %}
                <img src="{{ block.settings.product_image | image_url: width: 800 }}" loading="lazy" alt="Product Feature">
              {% endif %}
            </div>

          </div>
        </div>
      </div>
    {% endfor %}

    <button class="prev-slide" aria-label="Previous Slide">&#10094;</button>
    <button class="next-slide" aria-label="Next Slide">&#10095;</button>

    <div class="slide-dots-container">
      {% for block in section.blocks %}
        <span class="slide-dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  /* Container & Layout */
  .custom-slideshow-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100vh; /* Adjust height as needed */
  }
  
  .slideshow-wrapper {
    position: relative;
    height: 100%;
    width: 100%;
  }

  .slide-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out, visibility 0.6s;
    display: flex;
    align-items: center;
  }

  .slide-item.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  /* Background Handling */
  .slide-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .slide-background img, 
  .slide-background svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
  }

  /* Content Layout */
  .slide-content-wrapper {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 100%; /* Standard Shopify page width */
    padding: 0 30px;
  }

  .slide-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }

  /* Text Styling */
  .slide-text {
    max-width: 100%;
  }

  .slide-heading {
    font-size: 8rem;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .slide-subtext {
    font-size: 1.5em;
    font-weight: 500;
    margin-bottom: 15px;
    line-height: 1.2;
    letter-spacing: 3px;
  }

  /* Button Styling */
  .slide-button {
    display: inline-block;
    padding: 12px 30px;
    background-color: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
    text-decoration: none;
    font-weight: 600;
    border-radius: 4px;
    transition: opacity 0.3s;
  }

  .slide-button:hover {
    opacity: 0.8;
  }

  /* Product Image Styling */
  .slide-product-image {
    text-align: center;
  }

  .slide-product-image img {
    max-width: 100%;
    height: 100%;
    max-height: 100%;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15)); /* Nice shadow effect */
    transform: translateY(20px);
    opacity: 0;
    transition: transform 0.8s ease-out, opacity 0.8s ease-out;
  }

  /* Animation for product image when active */
  .slide-item.active .slide-product-image img {
    transform: translateY(0);
    opacity: 1;
  }
  .slide-dots-container {
    position: absolute;
    bottom: 30px;
    right: 40px; /* Positioned bottom right */
    z-index: 10;
    display: flex;
    gap: 12px;
  }

  .slide-dot {
    width: 12px;
    height: 12px;
    background-color: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
    border: 1px solid rgba(255,255,255,0.1);
  }

  .slide-dot:hover {
    background-color: rgba(255, 255, 255, 0.7);
  }

  /* Active Dot Animation */
  .slide-dot.active {
    background-color: #fff;
    transform: scale(1.3); /* Expands when active */
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.6);
  }

  /* Navigation Arrows */
  .prev-slide, .next-slide {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(255, 255, 255, 0.3);
    border: none;
    color: #fff;
    padding: 15px;
    cursor: pointer;
    z-index: 10;
    font-size: 18px;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
  }

  .prev-slide:hover, .next-slide:hover {
    background-color: rgba(255, 255, 255, 0.6);
  }

  .prev-slide { left: 20px; }
  .next-slide { right: 20px; }

  /* Mobile Responsive */
  @media only screen and (max-width: 768px) {
    .custom-slideshow-container {
      height: auto;
      min-height: 600px;
    }
    .slide-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 20px;
      padding: 40px 0;
    }
    .slide-text {
      margin: 0 auto;
    }
    .slide-heading {
      font-size: 2rem;
    }
    .slide-product-image img {
      max-height: 250px;
    }

    .slide-dots-container {
      right: 50%;
      transform: translateX(50%);
      bottom: 20px;
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const container = document.getElementById("slideshow-{{ section.id }}");
    const slides = container.querySelectorAll(".slide-item");
    const dots = container.querySelectorAll(".slide-dot");
    const nextBtn = container.querySelector(".next-slide");
    const prevBtn = container.querySelector(".prev-slide");
    
    let currentIndex = 0;
    const intervalTime = {{ section.settings.autoplay_speed }} * 1000;
    let slideInterval;

    function showSlide(index) {
      // Update Slides
      slides.forEach((slide, i) => {
        slide.classList.remove("active");
        if (i === index) {
          slide.classList.add("active");
        }
      });

      // Update Dots
      dots.forEach((dot, i) => {
        dot.classList.remove("active");
        if (i === index) {
          dot.classList.add("active");
        }
      });
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      showSlide(currentIndex);
    }

    function prevSlide() {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(currentIndex);
    }

    // Arrow Event Listeners
    nextBtn.addEventListener("click", () => {
      nextSlide();
      resetTimer();
    });

    prevBtn.addEventListener("click", () => {
      prevSlide();
      resetTimer();
    });

    // Dot Event Listeners
    dots.forEach(dot => {
      dot.addEventListener("click", (e) => {
        const index = parseInt(e.target.dataset.index);
        currentIndex = index;
        showSlide(currentIndex);
        resetTimer();
      });
    });

    // Autoplay Logic
    if ({{ section.settings.enable_autoplay }}) {
      startTimer();
    }

    function startTimer() {
      slideInterval = setInterval(nextSlide, intervalTime);
    }

    function resetTimer() {
      if ({{ section.settings.enable_autoplay }}) {
        clearInterval(slideInterval);
        startTimer();
      }
    }
  });
</script>

{% schema %}
{
  "name": "Banner Slideshow",
  "settings": [
    {
      "type": "header",
      "content": "Global Settings"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Autoplay Speed",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "Images"
        },
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "min": 0,
          "max": 90,
          "step": 10,
          "unit": "%",
          "label": "Dark Overlay Opacity",
          "default": 30
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image (Floating)",
          "info": "Upload a PNG with transparent background for best results."
        },
        {
          "type": "header",
          "content": "Text Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "New Arrivals"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Subtext",
          "default": "Discover the latest trends in our collection."
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        },
        {
          "type": "header",
          "content": "Call to Action"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}